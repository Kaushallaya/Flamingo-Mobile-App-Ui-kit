<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadingPage"
    android:background="@drawable/reading_page"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu"
            android:onClick="goHome"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="20dp"
        android:gravity="end">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bs_h1"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            android:fontFamily="@font/brlndb"
            android:textColor="@color/text"/>

    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/searchbar_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <EditText
            android:layout_width="0px"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="10"
            android:background="@null"
            android:drawableStart="@drawable/ic_search"
            android:hint="@string/search_bar"
            android:textSize="10sp" />

        <Button
            android:layout_width="0px"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:width="2dp"
            android:height="2dp"
            android:background="@drawable/ic_filter"
            android:padding="5dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/film_one_bg"
        android:elevation="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/film_ten"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OATHBREAKER'S GUILD"
                android:textSize="16sp"
                android:fontFamily="@font/acaslonproregular"
                android:textColor="@color/PrimaryText"/>

            <TextView
                android:id="@+id/tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Rose Shield Book 2"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by D.Wallace"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <androidx.viewpager.widget.ViewPager
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RatingBar
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="2.75"
                    android:progressTint="@color/rating"
                    android:progressBackgroundTint="@color/Divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2.75 Rating)"
                    android:textSize="10sp"
                    android:textColor="@color/SecondaryText"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published: 25/11/1992"
                android:textSize="10sp"
                android:textColor="@color/SecondaryText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/bs_btn1"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:elevation="8dp"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signbtn_bg2"
                    android:text="@string/bs_btn2"
                    android:textColor="@color/PrimaryText"
                    android:textStyle="bold"
                    android:textSize="5dp"
                    android:elevation="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/film_one_bg"
        android:elevation="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/film_seven"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAMILY DON'T END"
                android:textSize="16sp"
                android:fontFamily="@font/acaslonproregular"
                android:textColor="@color/PrimaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Most familer Book"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by S.Zubernis"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <androidx.viewpager.widget.ViewPager
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RatingBar
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="3.45"
                    android:progressTint="@color/rating"
                    android:progressBackgroundTint="@color/Divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(3.45 Rating)"
                    android:textSize="10sp"
                    android:textColor="@color/SecondaryText"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published: 05/12/2000"
                android:textSize="10sp"
                android:textColor="@color/SecondaryText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/bs_btn1"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:elevation="8dp"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signbtn_bg2"
                    android:text="@string/bs_btn2"
                    android:textColor="@color/PrimaryText"
                    android:textStyle="bold"
                    android:textSize="5dp"
                    android:elevation="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/film_one_bg"
        android:elevation="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/film_eleven"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THE WINTER FOLLY"
                android:textSize="16sp"
                android:fontFamily="@font/acaslonproregular"
                android:textColor="@color/PrimaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The aworded Book"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by L.Taylor"
                android:fontFamily="@font/corbeli"
                android:textColor="@color/SecondaryText"/>

            <androidx.viewpager.widget.ViewPager
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RatingBar
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="1.66"
                    android:progressTint="@color/rating"
                    android:progressBackgroundTint="@color/Divider"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(1.75 Rating)"
                    android:textSize="10sp"
                    android:textColor="@color/SecondaryText"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published: 11/03/1998"
                android:textSize="10sp"
                android:textColor="@color/SecondaryText"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/bs_btn1"
                    android:textSize="5dp"
                    android:textStyle="bold"
                    android:elevation="8dp"/>
                <Button
                    android:layout_width="80dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signbtn_bg2"
                    android:text="@string/bs_btn2"
                    android:textColor="@color/PrimaryText"
                    android:textStyle="bold"
                    android:textSize="5dp"
                    android:elevation="8dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>